        <component name="getIncidentById">
            <file>getIncidentById.xml</file>
            <description>Retrieve incident by the incident ID.</description>
        </component>
        <component name="listIncidents">
            <file>listIncidents.xml</file>
            <description>List the incidents.</description>
        </component>
        <component name="snoozeIncident">
            <file>snoozeIncident.xml</file>
            <description>Snooze an incident.</description>
        </component>
    </subComponents>
