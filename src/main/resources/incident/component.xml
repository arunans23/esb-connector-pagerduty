            <file>manageIncidents.xml</file>
            <description>Acknowledge, resolve, escalate or reassign one or more incidents.</description>
        </component>
        <component name="listLogEntries">
            <file>listLogEntries.xml</file>
            <description>List log entries for the specified incident.</description>
